@model IEnumerable<Category>
@{
	ViewData["Title"] = "Category";
}

<div class="container p-3">

	<figure class="text-center">
		<img src="~/images/0ba45930.png" alt="Cat Image" width="300" />
		<figcaption>cat</figcaption>
	</figure>

	<div class="row mb-2">
		<div class="col-6">
			<h2 class="text-primary">Category list</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; New Category
			</a>
		</div>
	</div>

	<table class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr class="table-primary">
				<th>Category Name</th>
				<th>Display Order</th>
				<th>Created Date Time</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="text-light" width="40%">@item.Name</td>
					<td class="text-light" width="25%">@item.DisplayOrder</td>
					<td class="text-light" width="25%">@item.CreatedDateTime</td>
					<td class="text-center" width="5%">
						<style>
							.btn-custom {
								padding: 0px 4px;
							}
						</style>

						<a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-custom">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-custom">
							<i class="bi bi-trash"></i>
						</a>

					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

<partial name="_Notification"></partial>


