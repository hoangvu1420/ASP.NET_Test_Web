@model BookStore.Models.Company

<div class="card text-white bg-dark shadow border-0 mt-3">
	<div class="card-header bg-secondary bg-gradient">
		<div class="row">
			<div>
				<h3 class="text-dark">@(Model.Id != 0 ? "Update" : "Create") Company</h3>
			</div>
		</div>
	</div>
	<div class="card-body p-3">
		<div class="container text-center">
			<figure>
				@if (Model.Id != 0)
				{
					<img src="~/images/catHuh!!!.png" alt="Cat Image" width="300" />
				}
				else
				{
					<img src="~/images/catChild.png" alt="Cat Image" width="300" />
				}
				<figcaption>cat</figcaption>
			</figure>
		</div>
		<form method="post">
			<input asp-for=Id type="hidden" />
			<div class="row justify-content-center text-center">
				<div class="col-9">
					<div class="form-floating mb-3 col-12">
						<input asp-for=Name type="text" class="form-control border-0 shadow" id="inputName" placeholder="Enter category name" />
						<label asp-for=Name class="form-label text-dark"></label>
						<span asp-validation-for=Name class="text-danger"></span>
					</div>
					<div class="form-floating mb-3 col-12">
						<input asp-for=Phone type="text" class="form-control border-0 shadow" id="inputISBN" placeholder="Enter ISBN" />
						<label asp-for=Phone class ="form-label text-dark"></label>
						<span asp-validation-for=Phone class="text-danger"></span>
					</div>
					<div class="form-floating mb-3 col-12">
						<input asp-for=StreetAddress type="text" class="form-control border-0 shadow" id="inputAuthor" placeholder="Enter author" />
						<label asp-for=StreetAddress class="form-label text-dark"></label>
						<span asp-validation-for=StreetAddress class="text-danger"></span>
					</div>
					<div class="form-floating mb-3 col-12">
						<input asp-for=City type="text" class="form-control border-0 shadow" id="inputListPrice" placeholder="Enter list price">
						<label asp-for=City class="form-label text-dark"></label>
						<span asp-validation-for=City class="text-danger"></span>
					</div>
					<div class="form-floating mb-3 col-12">
						<input asp-for=State type="text" class="form-control border-0 shadow" id="inputPrice" placeholder="Enter price" />
						<label asp-for=State class="form-label text-dark"></label>
						<span asp-validation-for=State class="text-danger"></span>
					</div>
					<div class="form-floating mb-3 col-12">
						<input asp-for=PostalCode type="number" class="form-control border-0 shadow" id="inputPrice50" placeholder="Enter price" />
						<label asp-for=PostalCode class="form-label text-dark"></label>
						<span asp-validation-for=PostalCode class="text-danger"></span>
					</div>

					<div class="row">
						<div class="col-6 col-md-3">
							@if (Model.Id != 0)
							{
								<button type="submit" class="btn btn-primary form-control">Update the company</button>
							}
							else
							{
								<button type="submit" class="btn btn-success form-control">Create new company</button>
							}
						</div>
						<div class="col-6 col-md-3">
							<a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to the list</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


<partial name="_Notification"></partial>





