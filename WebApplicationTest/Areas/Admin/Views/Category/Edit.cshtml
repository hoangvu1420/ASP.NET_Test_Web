@model Category

<div class="container text-center">
	<figure>
		<img src="~/images/catf8f8f8.png" alt="Cat Image" width="300" />
		<figcaption>cat</figcaption>
	</figure>
</div>

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-1">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for=Name class="form-label"></label>
			<input asp-for=Name type="text" class="form-control" id="inputName" placeholder="Enter category name" />
			<span asp-validation-for=Name class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for=DisplayOrder class="form-label"></label>
			<input asp-for=DisplayOrder type="number" class="form-control" id="inputDisplayOrder" placeholder="Enter display order" />
			<span asp-validation-for=DisplayOrder class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Update the category</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to the list</a>
			</div>
		</div>
	</div>
</form>

@if (!ViewData.ModelState.IsValid)
{
	<partial name="_Notification"/>
}

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}