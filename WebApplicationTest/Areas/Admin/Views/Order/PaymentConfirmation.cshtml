@model int

<div class="container row pt-4">
    <div class="col-12 text-center flex-column">
        <h1 class="text-primary text-center">Payment successful!</h1>
        <h3 class="text-info text-center">Order number: @Model</h3>
        <i class="bi bi-bag-check-fill text-success" style="font-size: 5em"></i>
        <a asp-area="Admin"
           asp-controller="Order"
           asp-action="Details"
           asp-route-id="@Model"
           class="btn btn-primary">
            Back to Order Details
        </a>
    </div>
</div>