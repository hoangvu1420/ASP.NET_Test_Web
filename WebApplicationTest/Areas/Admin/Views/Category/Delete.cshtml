@model Category

<div class="container text-center">
	<figure>
		<img src="~/images/cat51gA-D8.png" alt="Cat Image" width="300" />
		<figcaption>cat</figcaption>
	</figure>
</div>

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-1">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for=Name class="form-label"></label>
			<input asp-for=Name type="text" disabled class="form-control" id="inputName" placeholder="Enter category name" />
		</div>
		<div class="mb-3">
			<label asp-for=DisplayOrder class="form-label"></label>
			<input asp-for=DisplayOrder type="number" disabled class="form-control" id="inputDisplayOrder" placeholder="Enter display order" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete the category</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to the list</a>
			</div>
		</div>
	</div>
</form>

